@model GestaoDeUsinas.Models.Usina

@{
    ViewData["Title"] = "Deletar usina";
}


<h3>Deseja deletar o cadastro da seguinte usina?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Fornecedor)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Fornecedor.Nome)
        </dd class>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.UCusina)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.UCusina)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Ativo)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Ativo)
        </dd>
    </dl>
    
    <form asp-action="DeleteUsina" method="post">
        <input type="hidden" asp-for="Id" />
